{
  "name": "atomclass-server",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "dependencies": {
    "@adminjs/express": "6.0.0",
    "@adminjs/typeorm": "5.0.0",
    "@aws-sdk/client-cognito-identity-provider": "3.370.0",
    "@aws-sdk/client-s3": "3.379.1",
    "@aws-sdk/client-ses": "3.370.0",
    "@sendgrid/mail": "8.1.0",
    "adminjs": "7.0.0",
    "aws-jwt-verify": "4.0.0",
    "axios": "1.5.1",
    "bcrypt": "5.0.1",
    "connect-pg-simple": "9.0.0",
    "cors": "2.8.5",
    "crypto-js": "4.1.1",
    "crypto-random-string": "5.0.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-formidable": "1.2.0",
    "express-session": "1.17.3",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "9.0.2",
    "lodash.get": "4.4.2",
    "lodash.set": "4.3.2",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "node-cron": "3.0.3",
    "node-fetch": "3.3.2",
    "nodemon": "1.14.9",
    "pg": "8.11.0",
    "pm2": "5.3.0",
    "redis": "4.6.7",
    "reflect-metadata": "0.1.13",
    "socket.io": "4.7.1",
    "styled-components": "5.3.9",
    "tslib": "2.5.0",
    "typeorm": "0.3.17",
    "uuid": "9.0.0",
    "xlsx": "0.18.5",
    "yup": "1.2.0"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "postbuild": "copyfiles -u 1 \"src/public/**/*\" \"dist/src\" && copyfiles -u 1 \"src/**/*.html\" \"dist/src\" && copyfiles -u 1 \"src/**/.gitkeep\" \"dist/src\"",
    "build": "npm run prebuild && npx tsc && npm run postbuild",
    "clean": "rimraf ./dist",
    "start": "node dist/src/index.js",
    "dev": "nodemon --import ./register-ts-node.mjs src/index.ts",
    "dev:watch": "nodemon --watch \"src/**/*.{ts,tsx}\" --exec \"node --import ./register-ts-node.mjs\" src/index.ts",
    "typeorm": "ts-node ./node_modules/typeorm",
    "generate-migration": "npx typeorm-ts-node-esm migration:generate ./src/migrations/AutoGenerated -d ./src/config/databaseConfig.js",
    "migrate-down": "npx typeorm-ts-node-esm migration:revert -d ./src/config/databaseConfig.js",
    "create-migration": "npx typeorm-ts-node-esm migration:create ./src/migrations/migration",
    "migrate-status": "npx typeorm-ts-node-esm migration:show -d ./src/config/databaseConfig.js",
    "migrate-fresh": "npm run migrate-down && npm run migrate-up",
    "db-reset": "npm run migrate-down && npm run migrate-up",
    "migrate-up": "npx typeorm-ts-node-esm migration:run -d ./src/config/databaseConfig.js",
    "dev-migrate-up": "yarn run build && npx typeorm-ts-node-esm migration:run -d ./dist/src/config/databaseConfig.js",
    "dev-migrate-down": "yarn run build && npx typeorm-ts-node-esm migration:revert -d ./dist/src/config/databaseConfig.js",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@eslint/create-config": "0.4.5",
    "@types/bcrypt": "5.0.0",
    "@types/connect-pg-simple": "7.0.0",
    "@types/cors": "2.8.13",
    "@types/crypto-js": "4.1.1",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.17",
    "@types/express-session": "1.17.7",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "9.0.2",
    "@types/lodash.get": "4.4.7",
    "@types/lodash.set": "4.3.7",
    "@types/multer": "1.4.7",
    "@types/node": "20.3.1",
    "@types/node-cron": "3.0.11",
    "@types/stripe": "8.0.417",
    "@types/styled-components": "5.1.26",
    "@types/twilio": "3.19.3",
    "@types/uuid": "9.0.2",
    "@types/yup": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "copyfiles": "2.4.1",
    "eslint": "8.49.0",
    "eslint-plugin-json": "3.1.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,scss,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
